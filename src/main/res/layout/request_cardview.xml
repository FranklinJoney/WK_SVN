<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container"
    android:paddingRight="18dp"
    android:paddingLeft="18dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hundred_space"
        android:layout_marginBottom="1dp"
        card_view:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:divider="@drawable/divider"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:showDividers="end"
            android:weightSum="8">

            <LinearLayout
                android:id="@+id/slotNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/statusIcon"
                    android:layout_width="@dimen/sixty_height"
                    android:layout_height="@dimen/sixty_height"
                    app:srcCompat="@drawable/ic_open_blue" />
                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="@string/failed"
                    android:textAlignment="inherit"
                    android:textAllCaps="true"
                    android:textColor="@color/incidentnumber"
                    android:textSize="@dimen/twelve_text_size"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_weight="6"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/requestID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inidentnumber"
                        android:textColor="@color/incidentnumber"
                        android:textSize="@dimen/sixteen_text_size"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/requestDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="29-08-2016"
                        android:textColor="@color/incidentnumber"
                        android:textSize="@dimen/sixteen_text_size"
                        android:typeface="sans" />

                </LinearLayout>
                <TextView
                    android:id="@+id/requestShortDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/incidentStatus"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fifteen_text_size"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

