<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_update_security_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="5">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:gravity="center"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/update_question"
                android:textColor="@android:color/white"
                android:textSize="@dimen/eighteen_text_size"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/twenty_space"
        android:layout_marginRight="@dimen/twenty_space"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/questionOne_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/textViewSecurityQuestion1"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fourteen_margin"
                android:text="@string/security_question"
                android:textSize="@dimen/eighteen_text_size" />

            <ImageView
                android:id="@+id/arrowQuestionOne"
                android:layout_width="match_parent"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_right_arrow" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTexAnswerOne"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_space"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/answer"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:singleLine="true"
            android:textSize="@dimen/eighteen_text_size" />


        <LinearLayout
            android:id="@+id/questionTwo_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/textViewSecurityQuestion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/fourteen_margin"
                android:text="@string/security_question"
                android:textSize="@dimen/eighteen_text_size" />

            <ImageView
                android:id="@+id/arrowQuestionTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_right_arrow" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTexAnswerTwo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/answer"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:singleLine="true"
            android:textSize="@dimen/eighteen_text_size" />


        <LinearLayout
            android:id="@+id/questionThree_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/textViewSecurityQuestion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fourteen_margin"
                android:layout_weight="1"
                android:text="@string/security_question"
                android:textSize="@dimen/eighteen_text_size" />

            <ImageView
                android:id="@+id/arrowQuestionThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_weight="9"
                android:src="@drawable/ic_right_arrow" />
        </LinearLayout>


        <EditText
            android:id="@+id/editTexAnswerThree"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_space"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/answer"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:singleLine="true"
            android:textSize="@dimen/eighteen_text_size" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">


        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/fifteen_margin"
            android:layout_marginLeft="@dimen/fifteen_margin"
            android:layout_marginStart="@dimen/fifteen_margin"
            android:background="@drawable/round_corner"
            android:text="@string/action_submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_text_size" />
    </LinearLayout>

</LinearLayout>


